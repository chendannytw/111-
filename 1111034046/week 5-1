// ConsoleApplication2.cpp : 此檔案包含 'main' 函式。程式會於該處開始執行及結束執行。
//

// Fig. 5.3: fig05_03.c
// Creating and using a programmer-defined function.
#include <stdio.h> 

int square(int); 
int facto(int);
double exponent(int);
double expon(int, double);

int main(void)
{
	int x;
	for (x = 1; x <= 15; ++x) {
		printf("%d  ", square(x));
		printf("\n%d  ", facto(x));
		printf("\n%lf  ", exponent(x));
	}

	puts("");
}


int square(int y) 
{
	return y * y;              
}  


int facto(int y) 
{
	int result = 1, i;
	for (i = 1; i <= y; i++)
		result = result * i;
	return result;             
}  



double exponent(int y) 
{
	int result = 1, i;
	double expo = 1;
	for (i = 1; i <= y; i++) {
		result = result * i;
		expo = expo + (1.0 / result);
	}
	return expo;      
}  
