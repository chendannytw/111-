#include <stdio.h>

int main(void)
{
	int integer1 = 0;
	int integer2 = 0; 

	printf("Enter first integer:");
	scanf_s("%d", & integer1);
	printf("Enter first integer:");
	scanf_s("%d", & integer2);

	int A;
	int B;
	int C;
	int D;
	int E;

		A = integer1 + integer2;
	printf("和 是 %d\n", A);
	    B = integer1 - integer2;
	printf("差 是 %d\n", B);
	    C = integer1 * integer2;
	printf("乘積 是 %d\n", C);
	    D = integer1 / integer2;
	printf("商 是 %d\n", D);
	    E = integer1 % integer2;
	printf("餘數 是 %d\n", E);
	
	int v;
	int a;
	int e;

	printf("物體速度 是 \n");
	scanf_s("%d", &v);
	printf("加速度 是 \n");
	scanf_s("%d", &a);
	printf("時間 是 \n");
	scanf_s("%d", &e);

	int x;
	int y;
	x = v + a * e;
	printf("v=v+a*e %d\n", x);
	y = v * e+a*e/2;
	printf("s=v*e+12*a*e %d\n",	y);
}
