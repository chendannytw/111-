#include <stdio.h>
#include <stdlib.h>

/* run this program using the console pauser or add your own getch, system("pause") or input loop */

int main(int argc, char *argv[]) {
	int integer1 = 0;
	int integer2 = 0;
	printf("輸入第一個數字");
	scanf("%d", &integer1);
	printf("輸入第二個數字");
	scanf("%d", &integer2);
	int a = 0;
	a = integer1 + integer2;
	printf("總和是%d\n", a);
	int b = 0;
	b = integer1 - integer2;
	printf("相減是%d\n", b);
	int c = 0;
	c=integer1 * integer2;
	printf("相乘是%d\n", c);
	int d = 0;
	d = integer1 / integer2;
	printf("相除是%d\n", d);
	int e = 0;
	e = integer1 % integer2;
	printf("餘數是%d\n", e);
	return 0;
}
