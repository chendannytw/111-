#include <stdio.h>
#define SIZE 10 

void test1(int a[],int b[],int size);
int test2(int s[],int score,int low,int high);
void average(int s[]);
int middium(int s[],int low,int high);

int main(void){
	int a[SIZE]={2,6,4,8,10,12,89,68,45,37};
    int s[SIZE]={66,67,66,70,73,74,75,62,32}; 
	printf("氣泡排序前");
	int i,score,result;
	for(i = 0 ; i<SIZE ; ++i)
	printf("%4d",a[i]);//印分數 
	printf("\n");
	printf("          ");
	for(i=0 ; i<SIZE ; ++i)
	printf("%4d",s[i]);//印結果 
	
	test1(a,s,SIZE);//呼叫副程式 
	printf("\n氣泡排序後");
	for(i=0;i<SIZE;++i)
	printf("%4d",a[i]);//印分數
	printf("\n");
	printf("          ");
    for(i=0 ; i<SIZE ; ++i)
	printf("%4d",s[i]);//印結果 
	
	//下為十二周程式 
	printf("\n");
	test2(s,score,0,SIZE-1);//呼叫副程式
	printf("輸入查詢成績:");
	scanf("%d",&score);
	if(test2(s,score,0,SIZE-1) == -1)
	printf("查無此成績");	
	
	else
	printf("成績為%d的同學學號為:%d",score,a[test2(s,score,0,SIZE-1)]);//注意 test2(s,score,0,SIZE-1)只是項數，故前面要加陣列 a 
	//平均	
	average(s);
	printf("\n");
	//中位數
	middium(s,0,SIZE-1); 
}

void test1(int a[],int s[],int size){
	int pass,hold,i;
	for (pass=1 ; pass<SIZE ; ++pass){
		//執行幾回合 
		for(i=0 ; i<SIZE-pass ; ++i){//每回合裡面做幾次 
			if(s[i]>s[i+1]){
				hold = s[i];//定義hold用於暫存較大值 
				s[i] = s[i + 1];
				s[i + 1] = hold;
				
				hold = a[i];//定義hold用於暫存較大值 
				a[i] = a[i + 1];
				a[i + 1] = hold;
			}
		}
	}
}

int test2(int s[],int score,int low,int high){
	int mid;
	while(low <= high){
		mid = (low+high) / 2;
		
		if(score == s[mid])
		return mid;
		
		else if(score < s[mid])
		high = mid - 1;
		
		else
		low = mid + 1;
	}
	return -1;
}

void average(int s[]){
	int i,result=0,avg;
	for(i=0;i<SIZE;++i)
	result += s[i];
	avg=result/10;	
	printf("平均數為%d",avg);
}


int middium(int s[],int low,int high){
	int mid;
	mid = (low+high) / 2;
	printf("%d",s[mid]);
}