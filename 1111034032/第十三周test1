void fun(int d[2][SIZE],int size){
	int hold;
	for(pass=1;pass<SIZE;++pass){
		for(i=0;i<SIZE-1;++i){
			if(d[1][i]>d[1][i+1]){
				/*hold = s[i];
				s[i] = s[i+1];
				s[i+1] = hold;
				hold = a[i];
				a[i] = a[i+1];
				a[i+1] = hold;*/
				swap(&d[1][i],&d[1][i+1]);
				swap(&d[0][i],&d[0][i+1]);
			}
		}
	}
}

void swap(int *element1Ptr,int *element2Ptr)
{
	int hold;
	hold = *element1Ptr;
	*element1Ptr = *element2Ptr;
	*element2Ptr = hold;
}
