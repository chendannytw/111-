#include <stdio.h>
#include <ctype.h>
int main()
{
	char s1[] = "abcDEF6";
	char s2[] = "abcDEF6";
	int i,j = 0;
	int small = 0;
	int big = 0;
	int num = 0;

	while (s2[i]!='\0'){
		if(islower(s2[i])){
			small += 1;
			s1[i]=toupper(s2[i]);
		} 
		if(isupper(s2[i])){
			big += 1;
			s1[i]=tolower(s2[i]);
		} 
		if(isdigit(s2[i])){
			num += 1;
			s1[i]=s2[i];
		}
		i++;
	
	}
	printf("小寫字母數量: %d",small);
	printf("\n");
	printf("大寫字母數量: %d",big);
	printf("\n");
	printf("數字數量: %d",num);
	printf("\n");
	printf("原先字串: %s",s1);
	printf("\n");	 
	printf("互換大小寫後: %s",s2);
	
return 0;
}
