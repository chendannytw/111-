#include <stdio.h>
#define SIZE 10 

void test1(int b[],int c[],int size);

int main(void){
	int a[SIZE]={2,6,4,8,10,12,89,68,45,37};
    int s[SIZE]={0,66,67,66,70,73,74,75,62,32}; 
	printf("排序前");
	int i;
	for(i = 0 ; i<SIZE ; ++i)
	printf("%4d",a[i]);
	printf("\n");
	printf("          ");
	for(i=0 ; i<SIZE ; ++i)
	printf("%4d",s[i]); 
	
	test1(a,s,SIZE);
	printf("\n排序後");
	for(i=0;i<SIZE;++i)
	printf("%4d",a[i]);
	printf("\n");
	printf("          ");
    for(i=0 ; i<SIZE ; ++i)
	printf("%4d",s[i]); 
	
}

void test1(int b[],int c[]){
	int pass,hold,i;
	for (pass=1 ; pass<SIZE ; ++pass){ 
		for(i=0 ; i<SIZE-pass ; ++i){
			if(c[i]>c[i+1]){
				hold = c[i];
				c[i] = c[i + 1];
				c[i + 1] = hold;
				
				hold = b[i];
				b[i] = b[i + 1];
				b[i + 1] = hold;
			}
		}
	}
}
