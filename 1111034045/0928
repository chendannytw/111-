#include <stdio.h>

// function main begins program execution
int main(void)
{
    printf("Enter a grade, and I will tell you\n");
    printf("the results: ");

    int num1; // first number to be read from user
    //int num2; // second number to be read from user

    scanf_s("%d", &num1); // read two integers

    if (num1 >= 90) {   //如果if括弧內的結果為true  ,就會執行if的大括弧內的內容
        //如果if括弧內的結果為false  ,就跳過if的大括弧內的內容
        puts("A");
    }
    else {
        if (num1 >= 80) {
            puts("B");
        } // end if
        else {
            if (num1 >= 70) {
                puts("C");
            } // end if
            else {
                if (num1 >= 60) {
                    puts("D");
                } // end if
                else {
                    puts("F");
                } // end if
            }
        }
    }

    return 0;
} // end function main
------------------------------
#include <stdio.h>

// function main begins program execution
int main(void)
{
	int a, b, c, largest = 0, smallst = 9999;
		scanf_s("%d %d %d", &a ,&b ,&c);
		if (a >= b >= c) { largest = a, smallst = c; }
		{printf("the largest is %d \n", largest);
		}
		if (a >= c >= b) { largest = a, smallst = b; }
		{printf("the largest is %d \n", largest);
		}	
		if (b >= a >= c) { largest = b, smallst = c; }
		{printf("the largest is %d \n", largest);
		}
		if (b >= c >= a) { largest = b, smallst = a; }
		{printf("the largest is %d \n", largest);
		}
		if (c >= a >= b) { largest = c, smallst = b ; }
		{printf("the largest is %d \n", largest);
		}
		if (c >= b >= a) { largest = c, smallst = a; }
		{printf("the largest is %d \n", largest);
		}
