#include <stdio.h>
#define SIZE 10

void sort(int a[2][SIZE],int size);
//int binarySearch(const int a[],int ID,int low,int high);
void swap(int *element1Ptr,int *element2Ptr);
int main(void) 
{   

   
   int a[4][SIZE]={{12,13,14,15,16,17,19,21,22,23}
                  ,{66,67,66,70,73,74,75,75,62,32}
				  ,{44,46,27,12,80,63,66,90,11,66}
				  ,{40,46,13,27,82,65,98,45,52,78}}; 
   int i,key;
   puts("Data items in original order");
   for ( i = 0; i < SIZE; ++i) {
	  printf("\n%4d",a[0][i]);
	  
   } 
   printf("\n");
   for ( i = 0; i < SIZE; ++i) {
	  printf("\n%4d",a[0][i]);	  
   } 
   
	sort(a,SIZE);
	puts("");
	puts("\nData items in ascending order");
    for ( i = 0; i < SIZE; ++i) {
      printf("\n%4d",a[0][i]);
      printf("%4d", a[1][i]);
   }      	
	printf("\nPlease input score: ");
	scanf("%d",&key);	  
}
void sort(int a[2][SIZE],int size)
{int i,pass;
                       
   for ( pass = 1; pass < SIZE; ++pass) {                   
                                                             
      
      for ( i = 0; i < SIZE - 1; ++i) {                     
                                                             
         
         if (a[1][i] > a[1][i+1]) {                        
            swap(&a[1][i],&a[1][i+1]); 
            swap(&a[0][i],&a[0][i+1]);
			                              
         }                                       
      }                                   
   }                                      
	
}
void swap(int *element1Ptr,int *element2Ptr){
	int hold =*element1Ptr;
	*element1Ptr =*element2Ptr;
	*element2Ptr = hold;
}
