#include <stdio.h>
#include <ctype.h>

/* run this program using the console pauser or add your own getch, system("pause") or input loop */

int main() {
	char s1[]="aBcDeFgHI597";
	char s2[]="aBcDeFgHI597";
	int i=0;
	int ca=0;
	int cA=0;
	int c1=0;
	for(i=0;s2[i]='\0';i++)
	{
		if (islower(s2[i])){
			ca+= 1;
			s1[i]=toupper(s2[i]);
		} 
		else if (isupper(s2[i])){
			cA += 1;
			s1[i]=tolower(s2[i]);
		} 
		else if (isxdigit(s2[i])){
			c1 += 1;
			s1[i]=s2[i];
		} 
	}
    printf("before: %s\n",s2);
    printf("after: %s\n",s1);
    printf("%d , %d ,%d",ca ,cA, c1);
}
