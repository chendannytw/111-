#include <stdio.h>
#define z 10 

void scord(int a[],int c[],int size);

int main(void){
	int a[z]={2,6,4,8,10,12,89,68,45,37};
    int c[z]={66,67,66,70,73,74,75,62,32}; 
	printf("排序前");
	int i;
	for(i = 0 ; i<z ; ++i)
	printf("%4d",a[i]);
	printf("\n");
	printf("          ");
	for(i=0 ; i<z ; ++i)
	printf("%4d",c[i]);

	scord(a,c,z);
	printf("\n排序後");
	for(i=0;i<z;++i)
	printf("%4d",a[i]);
	printf("\n");
	printf("          ");
    for(i=0 ; i<z ; ++i)
	printf("%4d",c[i]);

}

void scord(int a[],int c[],int size){
	int pass,hold,i;
	for (pass=1 ; pass<z ; ++pass){
	 for(i=0 ; i<z-pass ; ++i){//
			if(c[i]>c[i+1]){
				hold = c[i];
				c[i] = c[i + 1];
				c[i + 1] = hold;

				hold = a[i];
				a[i] = a[i + 1];
				a[i + 1] = hold;
			}
		}
	}
}
