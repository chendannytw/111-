void sort(const char** name, int a[][SIZE]){
const char* ptr;
for (int pass = 1; pass < stu; pass++) {
for (int i = 0; i < stu - pass; i++) {
if (a[i][4] < a[i + 1][4]) {
ptr = name[i];
name[i] = name[i + 1];
name[i + 1] = ptr;
swap(&a[i][0], &a[i + 1][0]);
swap(&a[i][1], &a[i + 1][1]);
swap(&a[i][2], &a[i + 1][2]);
swap(&a[i][3], &a[i + 1][3]);
swap(&a[i][4], &a[i + 1][4]);
}
}
}
}
void Avage(int data[][SIZE]) {
for (int i = 0;i < stu;i++) {
data[i][4] = data[i][3] / 2;
}
}
void print(const char** name, int data[][SIZE]) {
printf("名字　　學號 數學記概總分平均 排名\n");
for (int i = 0;i < stu;i++) {
printf("%8s", name[i]);
for (int idx = 0; idx < SIZE; idx++) {
printf("%4d", data[i][idx]);
}
printf("\n");
}
}
void Rank(int data[][SIZE]) {
for (int i =1 ;i < stu - 1;i++) {
if (data[i][3] == data[i - 1][3]) {
data[i][5] = i;
}
else {
data[i][5] = i + 1;
}
}
data[0][5] = 1;
}
int Median(int data[][SIZE]) {
int nMid = 0;
if (stu % 2 != 0) {
nMid = data[(stu - 1) / 2][4];
}
else {
nMid = (data[stu / 2][4] + data[stu / 2 + 1][4]) / 2;
}
return nMid;
}
//資料交換程式
void swap(int* e1Ptr, int* e2Ptr){
int hold;
hold = *e1Ptr;
*e1Ptr = *e2Ptr;
*e2Ptr = hold;
}




