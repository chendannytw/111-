#include<stdio.h>
#define SIZE 10

//searchID;
int Search(int id[], int sc[], int key);

int main(void) {
	int a[SIZE] = { 12,13,14,15,16,17,19,21,22,23 };
	int c[SIZE] = { 66,67,70,66,73,74,75,75,62,32 }, key, i, temp;
	puts("Data itmes in original order");
	for (i = 0; i < SIZE; ++i) {
		printf("\n%4d", a[i]);
		printf("%4d", c[i]);
	}

	printf("\n請輸入: ");
	scanf_s("%d", &key);

	temp = Search(a, c, key);
	if (temp == -1) {
		printf("找沒有喔!");
		return 0;
	}
	printf("%d的成績是%d", a[temp], c[temp]);
	puts("");
}
int Search(int id[], int sc[], int key) {
	int i;
	for (i = 0; i < SIZE; i++) {
		if (id[i] == key) {
			return i;
		}
	}
	return -1;
}
