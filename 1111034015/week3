#include <stdio.h>
int main (void)
{

int a, b, c, max=0, min=9999;
int sum=0, avg=0, product=0;
scanf("% d % d % d", & a,& b,& c);

if(a>max)
  max=a;
if(b>max)
  max=b;
if(c>max)
  max=c;
if(a<min)
  min=a;
if(b<min)
  min=b;
if(c<min)
  min=c;
  
  if(a>b){
  	if(a>c)
  	max=a;
  }
  else if(a>c){
  	max=c;
  }
  else{
  	max=b;
  }
  if(a<b){
  if(a<c)
  min=a;
}
else if(a>c){
	min=c
}
else{
	min=b;
}
sum=a+b+c;
avg=sum/3;
product=a*b*c;
printf("%d %d %d %d",max ,min, sum, avg, product);
}
